{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome (localhost:3000)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*"
      }
    },
    {
      "name": "개발 서버 실행 후 Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${webRoot}/src/*",
        "webpack:///src/*": "${webRoot}/src/*"
      },
      "preLaunchTask": "pnpm: dev",
      "serverReadyAction": {
        "pattern": "Local:.+(https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Antigravity Browser",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "browserLaunchLocation": "workspace"
    }
  ]
}
